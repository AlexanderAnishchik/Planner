@using Planner.Models
@model LoginViewModel
@{
    Layout = null;
    ViewBag.Title = "Планувальник | Вхід";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title> @ViewBag.Title</title>
    <link rel="icon" type="image/ico" href="http://www.ei.hneu.edu.ua/images/logo2.png" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link href="~/Content/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Scripts/plugins/iCheck/square/blue.css" rel="stylesheet" />

    <script src="~/Scripts/plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <script src="~/Scripts/plugins/iCheck/icheck.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%'
            });
        });
    </script>
</head>

<body class="hold-transition login-page">
    <div class="header-widget">
        <div class="site-logo">
            <a href="http://www.hneu.edu.ua/" title="Харківский  національний економічний університет імені Семена Кузнеця" rel="home">
                <img class="header-image" src="http://www.ei.hneu.edu.ua/images/logo2.png" style="width: 120px;float:left">
            </a>
            <div class="login-logo">
                <p class="main-title" itemprop="headline">
                    <c title="ПЛАНУВАЛЬНИК НАВАНТАЖЕННЯ ВИКЛАДАЧА">ПЛАНУВАЛЬНИК НАВАНТАЖЕННЯ ВИКЛАДАЧІВ <br>ХАРКІВСЬКИЙ НАЦІОНАЛЬНИЙ УНІВЕРСИТЕТ ІМЕНІ СЕМЕНА КУЗНЕЦЯ</c><br>
                </p>
            </div>
        </div>
        
    </div>
   
    <div class="container body-content" style="width: 600px">
        <div id="background-img" class="background-img">
            <img id="house" src="~/Content/Images/house.png" style="height: 450px;">
        </div>
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form", style = "background-color: rgba(0,0,0,0.5);padding: 25px;border-radius: 9px;" }))
        {
            @Html.AntiForgeryToken()
            
            <label for="usr" style="color: white">Авторизуйтеся для подальшої роботи</label>
                    @Html.ValidationSummary(true, "", new { @class = "text-warning" })
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Електронна адреса" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-warning" })

                    </div>
                    <div class="form-group has-feedback">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Пароль" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-warning" })

                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            <div class="checkbox icheck">
                                <label>
                                    @Html.CheckBoxFor(m => m.RememberMe) Запам'ятати мене
                                </label>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <button type="submit" class="btn btn-primary btn-block btn-flat">Увійти</button>
                        </div>
                    </div>
        }
        
    </div>        
</body>
</html>
