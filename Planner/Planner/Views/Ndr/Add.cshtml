@model Domain.Models.NDR


        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">

                <!-- quick email widget -->
                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-envelope"></i>
                        <h3 class="box-title">Результати НДР студентів</h3>
                        <!-- tools box -->
                        <div class="pull-right box-tools">
                            <button class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                        </div><!-- /. tools -->
                    </div>
                    <p class="login-box-msg" style="color:red">@Session["message"]</p>
                    @using (Html.BeginForm("Save", "Ndr", FormMethod.Post, new { @class = "", role = "form" }))
                    {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.ValidationSummary()
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", ng_pattern = @"/^([^0-9]*){4,50}$/", placeholder = "ПIБ викладача" })

                    </div>
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.Type, new { @class = "form-control", ng_pattern = @"/^([^0-9]*){4,50}$/", placeholder = "Тип" })

                    </div>
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.Level, new { @class = "form-control", ng_pattern = @"/^([^0-9]*){4,50}$/", placeholder = "Рiвень" })

                    </div>
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", ng_pattern = @"/^([^0-9]*){4,50}$/", placeholder = "Назва/Напрям"  })

                    </div>
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.Step, new { @class = "form-control", ng_pattern = @"/^([^0-9]*){4,50}$/", placeholder = "Етап" })

                    </div>
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.Place, new { @class = "form-control", ng_pattern = @"/^([^0-9]*){4,50}$/", placeholder = "Мiсце та дата проведення", })

                    </div>
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.StudentName, new { @class = "form-control", ng_pattern = @"/^([^0-9]*){4,50}$/", placeholder = "ПIБ студента" })

                    </div>
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(m => m.Awards, new { @class = "form-control", ng_pattern = @"/^([^0-9]*){4,50}$/", placeholder = "Нагороди" })

                    </div>
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Зберiгти</button>
                    </div><!-- /.col -->
                    }
                </div>



            </section><!-- /.Left col -->
            <!-- right col (We are only adding the ID to make the widgets sortable)-->

        </div><!-- /.row (main row) -->
