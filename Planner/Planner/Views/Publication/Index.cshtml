@{
    ViewBag.Title = "Home Page";
}
@model List<Domain.Reports.PublicationForm11>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Головна сторінка
            <small>Панель</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Планувальник</a></li>
            <li class="active">Публикации</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        @Html.Partial("PublictionMenuPartial")
        @if (Model != null && Model.Count != 0)
        {
            <div class="row">

                <table class="table table-striped col-lg-10">
                    <thead>
                        Публикации
                    </thead>
                    <tr>
                        <th>Назва</th>
                        <th>Характер роботи</th>
                        <th>Вихідні дані</th>
                        <th>Обсяг (стор.)</th>
                        <th>Співавтори</th>
                    </tr>

                    @foreach (var pub in Model)
                    {
                    <tr >
                        <td><b>@pub.PublicationType</b><br>@pub.Name</td>
                        <td>@pub.StoringType</td>
                        <td>@pub.Output</td>
                        <td>@pub.Pages</td>
                        <td>
                            @if (pub.Collaborators != null && pub.Collaborators.Count != 0)
                            {
                                <span>@pub.Collaborators[0].Name</span>
                                foreach (var col in pub.Collaborators.Skip(1))
                                {
                                    <span>, @col.Name</span>
                                }
                            }
                            else
                            {
                                <span>Нет соавторов</span>
                            }


                        </td>
                    </tr>
                    }


                </table>
            </div>
        }
        else
        {
            <p>У вас еще нет публикаций</p>
        }
    </section>
</div><!-- /.content-wrapper -->
