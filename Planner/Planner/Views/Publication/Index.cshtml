@{
    ViewBag.Title = "Home Page";
}
@model List<Domain.Models.Publication>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Головна сторінка
            <small>Панель</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Планувальник</a></li>
            <li class="active">Публикации</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-2 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-gray-light">
                    <a href="~/Publication/Create" class="inner btn-block">Создать <i class="glyphicon glyphicon-pencil"></i></a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-2 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-gray-light">
                    <a href="#" class="inner btn-block">Мои публикации <i class="glyphicon glyphicon-paperclip"></i></a>
                </div>
            </div><!-- ./col -->
            <div class="col-lg-2 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-gray-light">
                    <a href="#" class="inner btn-block">Черновики <i class="glyphicon glyphicon-briefcase"></i></a>
                </div>
            </div><!-- ./col -->
        </div><!-- /.row -->
        @if (Model != null && Model.Count != 0)
        {
            <div class="row">

                <table class="table table-responsive col-lg-10">
                    <thead>
                        Публикации
                    </thead>
                    <tr>
                        <th>Название</th>
                        <th>Объем</th>
                        <th>Текст</th>
                        <th></th>
                        <th></th>
                    </tr>

                    @foreach (var pub in Model)
                    {
                    <tr>
                        <td>@pub.Name</td>
                        <td>@pub.Pages</td>
                        <td>@pub.Text</td>
                        <td></td>
                        <td></td>
                    </tr>
                    }


                </table>
            </div>
        }
    </section>
</div><!-- /.content-wrapper -->
