@{
    ViewBag.Title = "Create";
}
@model Planner.Models.CreatePublicationViewModel

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Головна сторінка
            <small>Панель</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Планувальник</a></li>
            <li class="active">Публикации</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">

                <!-- quick email widget -->
                <div class="box box-info">
                    <div class="box-header">
                        <i class="fa fa-envelope"></i>
                        <h3 class="box-title">Публікація</h3>
                        <!-- tools box -->
                        <div class="pull-right box-tools">
                            <button class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                        </div><!-- /. tools -->
                    </div>
                    <div class="box-body">
                        <form action="~/Publication/Create" method="post">
                            <div class="form-group">
                                <input type="text" class="form-control" name="name" placeholder="Назва">
                            </div>

                            <div class="form-group">
                                <input type="text" class="form-control" name="Pages" placeholder="Обсяг">
                            </div>
                            <div class="form-group">
                                <select name="">
                                    @foreach(var sbase in Model.ScientificBases)
                                    {
                                        <option value="@sbase.Id">@sbase.Name</option>
                                    }
                                </select>
                            </div>
                            <div>
                                <textarea name="Text" placeholder="Текст" style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                            </div>
                            <div class="box-footer clearfix">
                                <input type="submit" class="pull-right btn btn-default" value="Додати" />
                            </div>
                        </form>
                    </div>
                    
                </div>



            </section><!-- /.Left col -->
            <!-- right col (We are only adding the ID to make the widgets sortable)-->

        </div><!-- /.row (main row) -->

    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
