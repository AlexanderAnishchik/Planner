<script type="text/javascript">

    var data = [{"item_id": 1, "item": "Name", "item_cd":"sdsdda"}];
    jQuery("#scroll37").jqGrid({
        data: data,
        datatype: "local",
        height: 255,
        width: 600,
        colNames: ['Index', 'Name', 'Code'],
        colModel: [
            { name: 'item_id', index: 'item_id', width: 65, sorttype: 'int' },
