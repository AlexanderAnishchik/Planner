    <link href="~/Scripts/jqGrid/css/jquery-ui.min.css" rel="stylesheet" />

    <script src="~/Scripts/jqGrid/js/jquery-1.4.2.min.js"></script>
    <script src="~/Scripts/jqGrid/js/i18n/grid.locale-ua.js"></script>
