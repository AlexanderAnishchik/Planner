        loadonce: true,
        rownumbers: true,
        rownumWidth: 40,
        gridview: true,
        pager: '#pscroll37',
        sortname: 'item_id',
        viewrecords: true,
        sortorder: "asc",
        caption: "Virtual scrolling on local data"
    });
    
    jQuery("#scroll37").jqGrid('navGrid', '#pscroll37', { del: false, add: false, edit: false }, {}, {}, {}, { multipleSearch: true });

</script>
